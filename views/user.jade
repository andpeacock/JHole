extends layout

block content
  div.container
    if(user.evename)
      h1= user.evename
      p Estimate total amount owed: #{total}
    else
      form(action='/evename', method='post')
        label Enter eve main character name:
        input(type='text', name='evename')
        button(type='submit', class='btn btn-default') Submit
    if(user.admin)
      h1 Member List
      table.table.table-striped.table-hover.table-bordered.table-condensed
        thead
          tr
            td Username
            td Email
            td Eve main
            td Delete
            td Edit
            td Status
        tbody
          for m in memberList
            tr
              td.user= m.user
              td.email= m.email
              td.evename= m.eve
              td.delCont
                button.btn.btn-danger.adminUserDel Delete
              td.editCont
                button.btn.btn-warning.adminUserEdit Edit
              if(m.admin)
                td.status admin
              else
                td.status user
      h1 Update Registration Phrase
        form(action='/registerPhrase', method='post').phraseForm
          label(for='updatePhrase')
          div.input-group
            input(type='text', name='updatePhrase', class='form-control', id='updatePhrase', placeholder='Update registration phrase')
            span.input-group-btn
              button(type='submit', class='btn btn-default') Update phrase