div#hload
  h1#iid
  div.btn-group
    button#chl.btn.btn-danger Close
    button#addm.btn Add More
    button#export.btn.btn-info Save
  table#groups.table.table-condensed
    thead
      tr
        td Group Number
        td Total Estimate
        td Number of People
        td Split Per
    tbody
      tr.g0
        td.gNum 0
        td.totalEst
        td.numPeople
        td.perTotal
  table#vals.table.table-condensed
    thead
      tr
        td Real Value of Loot
        td Estimated Value
        td % of Estimated
        td Total Cut
        td Total After Cut
    tbody
      tr
        td.vReal
          input(type='text', class='form-control')
        td.vEst 0
        td.vPer percent
        td.vcTax 0
        td.vTotal 0
  table#main.table.table-striped.table-hover.table-bordered.table-condensed
    thead
      tr
        td Total
        td.gTotal 0
        td.i0
          input(type='text', class='form-control')
    tbody
      for user, i in members
        tr(id='#{i}')
          td.mname #{user}
          td.payout 0
          td.m0
            button(type='button', class='btn')
      tr#del
        td
        td
        td.d0
          button(type='button', class='btn btn-danger')